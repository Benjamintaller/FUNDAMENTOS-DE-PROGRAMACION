// Menu.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.
//

#include <iostream>
using namespace std;
int main()
{
    int opcion, cantidad;
    float suma = 0, ingreso, precio;
    do {
        cout << "Menu" << endl;
        cout << "1. Hamburguesas" << endl;
        cout << "2. Hamburguesa con queso" << endl;
        cout << "3. papas" << endl;
        cout << "4. Soda" << endl;
        cout << "0. salir" << endl;
        cout << "ingrese la opcion: ";
        precio = 0;
        cin >> opcion;
        switch (opcion) {
        case 1: precio = 3;
            break;
        case 2: precio = 5;
            break;
        case 3: precio = 2;
            break;
        case 4: precio = 2.5;
            break;
        case 0: cout << "salir" << endl;
            break;
        default:
            cout << "error" << endl;
        }
        if (precio > 0) {
            cout << "ingrese la cantidad" << endl;
            cin >> cantidad;
            ingreso = cantidad * precio;
            suma = suma + ingreso;
        }
    } while (opcion != 0); 
    cout << " El monto total a pagar es: " << suma;
    return 0;
  
}

// Ejecutar programa: Ctrl + F5 o menú Depurar > Iniciar sin depurar
// Depurar programa: F5 o menú Depurar > Iniciar depuración

