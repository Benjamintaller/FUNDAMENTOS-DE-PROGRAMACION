#include <iostream>
#include <string>
using namespace std;
void leer(string &frase, string &caracter);
int encontrar(const string frase, const string palabra);  


int main() {
    string frase, caracter;
    leer(frase, caracter);  
    int num; 
    encontrar(frase, caracter); 
    return 0;
}
void leer(string &frase, string &caracter) {
    cout << "Ingrese la frase: "<<endl;
    getline(cin, frase);  
    cout << "Ingrese el caracter a buscar: "<<endl;
    cin >> caracter;  
}
int encontrar(const string frase, const string caracter) {
    int num=0;
    for( int i=0; i<frase.length(); i++)
    if(frase.at(i)==caracter[0])
    num++;
    cout<<"El caracter sale en la palabra "<< num << " veces "<<endl;
    return num;
}
