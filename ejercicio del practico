#include <iostream>
using namespace std;
int main()
{
int n, s=0;
cout<<"ingrese un numero"<<endl;
cin>>n;
for(int i=1 ; i<=n; i++)
    s=s+i;
    
cout<<"La suma de los numeros de 1 a "<< n <<" es: "<<s<<endl;

    return 0;
}
